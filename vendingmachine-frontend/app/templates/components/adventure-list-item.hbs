{{#if isEditing}}
  {{#if attrs.viewConfig.showTitle}}
    <td>
      {{input
        type="text"
        placeholder="Title"
        value=attrs.adventure.title}}
    </td>
  {{/if}}
  {{#if attrs.viewConfig.showDescription}}
    <td>
      {{input
        type="text"
        placeholder="Description"
        value=attrs.adventure.desc}}
    </td>
  {{/if}}
  {{#if attrs.viewConfig.showLocation}}
    <td>
      {{input
        type="text"
        placeholder="Location"
        value=attrs.adventure.loc}}
    </td>
  {{/if}}
  {{#if attrs.viewConfig.showEnabled}}
    <td>
      {{input
        type="checkbox"
        checked=attrs.adventure.enabled}}
    </td>
  {{/if}}
  <td {{action "save"}} title="Save">
    <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
  </td>
  <td {{action "disableIsEditing"}} title="Cancel">
    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
  </td>
{{else}}
  {{#if attrs.viewConfig.showTitle}}
    <td>{{attrs.adventure.title}}</td>
  {{/if}}
  {{#if attrs.viewConfig.showDescription}}
    <td>{{attrs.adventure.desc}}</td>
  {{/if}}
  {{#if attrs.viewConfig.showLocation}}
    <td>{{attrs.adventure.loc}}</td>
  {{/if}}
  {{#if attrs.viewConfig.showEnabled}}
    <td>
      <input type="checkbox" disabled checked={{attrs.adventure.enabled}}>
    </td>
  {{/if}}
  <td {{action "enableIsEditing"}} title="Edit">
    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
  </td>
  <td {{action attrs.remove attrs.adventure.id}} title="Remove">
    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
  </td>
{{/if}}